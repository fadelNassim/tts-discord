# Example Configuration for TTS Server
# Copy this file and customize as needed

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5002

# Model Configuration
DEVICE=auto  # auto, cuda, cpu
OFFLINE_MODE=1  # 1 for offline, 0 for online

# Hugging Face Configuration
# Only needed for initial setup
HF_TOKEN=your_token_here

# Paths
REFERENCES_DIR=./references
OUTPUT_DIR=./audio_output

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Performance
MAX_WORKERS=1  # Number of concurrent TTS requests
TIMEOUT=30  # Request timeout in seconds

# Audio Settings
DEFAULT_TEMPERATURE=1.7
DEFAULT_MIN_P=0.1
DEFAULT_TOP_P=0.9
DEFAULT_TOP_K=50
DEFAULT_REPETITION_PENALTY=1.0
DEFAULT_NORM_LOUDNESS=true

# Security
# Set to specific IPs/domains in production
ALLOWED_ORIGINS=*
